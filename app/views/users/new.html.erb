<!-- Modal -->
<div class="modal fade" style="margin-top: 8%;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 class="modal-title">Sign up now for early access.</h3>
      </div>

      <div class="modal-body">
        <p>
          We're working closely with early users to give them the best
          possible experience. Want to learn more? Drop us your email
          and we'll be in touch.
        </p>

        <%= form_for(User.new, { html: { style: 'padding: 0 20px;' } }) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, class: 'form-control input-lg pull-left', placeholder: 'bill@company.com', style: 'width: 70%;' %>
          </div>

          <%= f.submit 'Sign Me Up!', class: 'btn btn-primary btn-lg pull-right', style: 'width: 28%;' %>
        <% end %>

        <div class="clearfix"></div>
      </div>
    </div>
  </div>
</div>
